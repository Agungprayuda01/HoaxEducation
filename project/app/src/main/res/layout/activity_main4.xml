<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/detailberita"
    tools:context=".lihatberita.Main4Activity">


    <ImageView
        android:id="@+id/imageberita2"
        android:layout_width="411dp"
        android:layout_height="158dp"
        android:layout_marginTop="15dp"
        android:foregroundGravity="center"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/judulberita" />

    <TextView
        android:id="@+id/judulberita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round2"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Judulberita"
        android:textColor="#000"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/namapenulis" />

    <TextView
        android:id="@+id/namapenulis"
        android:layout_width="89dp"
        android:layout_height="15dp"
        android:background="@drawable/round2"
        android:layout_marginStart="72dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="nama penulis berita"
        android:textColor="#000"
        android:textSize="10dp"
        app:layout_constraintBottom_toTopOf="@+id/judulberita"
        app:layout_constraintStart_toEndOf="@+id/katagoriberita"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/date"
        android:layout_width="90dp"
        android:layout_height="15dp"
        android:background="@drawable/round2"
        android:layout_marginStart="71dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="date"
        android:textColor="#000"
        android:textSize="10dp"
        app:layout_constraintBottom_toTopOf="@+id/judulberita"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/namapenulis" />

    <TextView
        android:id="@+id/katagoriberita"
        android:layout_width="65dp"
        android:layout_height="13dp"
        android:background="@drawable/round2"
        android:layout_marginStart="16dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="katagoriberita"
        android:textColor="#000"
        android:textSize="10dp"
        app:layout_constraintBottom_toTopOf="@+id/judulberita"
        app:layout_constraintEnd_toStartOf="@+id/namapenulis"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pidberita" />

    <TextView
        android:id="@+id/deskripsi"
        android:layout_width="match_parent"
        android:layout_height="378dp"
        android:background="@drawable/round2"
        android:layout_marginStart="28dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="57dp"
        android:scrollbars="vertical"
        android:text="TextView"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageberita2" />

    <EditText
        android:id="@+id/pidberita"
        android:layout_width="165dp"
        android:layout_height="31dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/round2"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:textSize="10dp"
        app:layout_constraintEnd_toStartOf="@+id/Report"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Report"
        android:layout_width="84dp"
        android:layout_height="35dp"
        android:background="@null"
        android:onClick="report"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>